{
  "name": "puddle",
  "version": "1.0.0",
  "description": "Home automation with MQTT",
  "main": "./dist/main.js",
  "scripts": {
    "build:server": "tsc -p .",
    "build:webapp": "npm run parcel:build --prefix=./webapp",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js -w dist ./dist/main.js",
    "dev": "run-p dev:*",
    "git:pull": "git pull",
    "git:push": "git push -u origin main",
    "git:push:upstream": "git push -u upstream main",
    "migration:create": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:reset": "npm run migrate:rollback && npm run migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "prod": "npm run build:server && node ./dist/main.js",
    "test": "NODE_ENV=test lab --typescript"
  },
  "author": "Pin Tan",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.3.2",
    "@hapi/hoek": "^11.0.2",
    "@hapi/inert": "^7.1.0",
    "@types/node-schedule": "^2.1.0",
    "better-sqlite3": "^8.4.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "mqtt": "^4.3.7",
    "node-schedule": "^2.1.1",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.3",
    "@hapi/lab": "^25.1.2",
    "@ngneat/falso": "^6.4.0",
    "@types/better-sqlite3": "^7.6.4",
    "@types/hapi__cookie": "^12.0.2",
    "@types/node": "^20.2.4",
    "@types/suncalc": "^1.9.0",
    "knex": "^2.4.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
